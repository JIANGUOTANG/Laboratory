<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/notifacation_rootView"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginTop="16dp"
    android:clickable="true"
    android:orientation="horizontal">
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="92dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="92dp"
            android:paddingStart="92dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <com.elyeproj.loaderviewlibrary.LoaderTextView
                    android:id="@+id/tvTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                     android:layout_marginRight="16dp"
                    android:layout_marginLeft="6dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_rect_list_normal"
                    android:clickable="false"
                    android:gravity="center_vertical"
                    android:textColor="@color/text"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textSize="@dimen/textsize_big_title" />

                <com.elyeproj.loaderviewlibrary.LoaderTextView
                    android:id="@+id/tvTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:clickable="false"
                    android:gravity="center_vertical"
                    android:textColor="@color/colorsmallTitle"
                    android:textSize="@dimen/textsize_smalltip" />
            </LinearLayout>
            <com.elyeproj.loaderviewlibrary.LoaderTextView
                android:id="@+id/tvDetile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_rect_list_normal"
                android:clickable="false"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:layout_marginLeft="6dp"
                android:textColor="@color/colorsmallTitle"
                android:textSize="@dimen/textsize_smalltitle" />
        </LinearLayout>
        <com.elyeproj.loaderviewlibrary.LoaderImageView
            android:id="@+id/notificationImage"
            android:layout_width="92dp"
            android:layout_height="92dp"
            android:clickable="false"
            android:padding="4dp"
            android:scaleType="centerCrop"
            android:transitionName="notifiIcon" />
    </RelativeLayout>
<ImageView
    android:id="@+id/covering_image"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:adjustViewBounds="true"
    android:scaleType="centerCrop"
    android:src="@drawable/love"
    android:transitionName="headerTransition"
    android:visibility="invisible"
    />
</FrameLayout>
</android.support.v7.widget.CardView>