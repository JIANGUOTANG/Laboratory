<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        style="@style/toolbarstyle">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/insertLaboratory_tvommit"

                android:text="@string/commit"
               style="@style/ActionbarTextView"/>

        </LinearLayout>

    </android.support.v7.widget.Toolbar>

    <ScrollView xmlns:apps="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"

        android:layout_height="wrap_content">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/laboratory_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </android.support.v7.widget.RecyclerView>
    </ScrollView>

    <include layout="@layout/content_laboratory" />

</LinearLayout>
